    public void HandleLetterButton(View v)
    {
        Button button = findViewById(v.getId());
        char letter = button.getText().toString().charAt(0);
        currentTries++;

        if(correctWord.charAt(letterIndex) == letter)
        {
            UpdateScore();
            numberOfwords++;

            if(currentScore >= previusBestScore)
            {
                ImageButton b = findViewById(R.id.maratona_share);
                b.setVisibility(View.VISIBLE);
            }

            GetNextLevel();
        }
        else
        {
            button.setBackgroundColor(getResources().getColor(R.color.maratona_red));
            button.setTextColor(getResources().getColor(R.color.maratona_white));
            button.setClickable(false);

            if(currentTries >= 5)
            {
                ImageButton b = findViewById(R.id.maratona_skip);
                b.setVisibility(View.VISIBLE);
            }
        }
    }

    public void HandleSkipButton(View v)
    {
        GetNextLevel();
    }

    public void HandleBackButton(View v)
    {
        Intent intent = new Intent(this, Menu.class);
        intent.putExtra("name", userName);
        startActivity(intent);
    }

