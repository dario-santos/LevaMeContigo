<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subscribed_line_background"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/PerfilBackGround" />

    <TextView
        android:id="@+id/subscribed_line_origemdestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origem -> Destino"
        app:layout_constraintBottom_toBottomOf="@+id/subscribed_line_background"
        app:layout_constraintStart_toStartOf="@+id/subscribed_line_data"
        app:layout_constraintTop_toBottomOf="@+id/subscribed_line_data" />

    <TextView
        android:id="@+id/subscribed_line_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Dia: dd/MM/YYYY"
        app:layout_constraintStart_toStartOf="@+id/subscribed_line_background"
        app:layout_constraintTop_toTopOf="@+id/subscribed_line_background" />

    <TextView
        android:id="@+id/subscribed_line_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Hora: hh:mm"
        app:layout_constraintBottom_toBottomOf="@+id/subscribed_line_origemdestino"
        app:layout_constraintStart_toEndOf="@+id/subscribed_line_origemdestino"
        app:layout_constraintTop_toTopOf="@+id/subscribed_line_origemdestino" />

</androidx.constraintlayout.widget.ConstraintLayout>