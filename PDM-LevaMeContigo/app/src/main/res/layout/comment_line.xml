<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/comment_line_userprofile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_profile_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/comment_line_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Dário Santos"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/comment_line_userprofile"
        app:layout_constraintStart_toEndOf="@+id/comment_line_userprofile"
        app:layout_constraintTop_toTopOf="@+id/comment_line_userprofile" />

    <ImageView
        android:id="@+id/comment_line_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/comment_line_userprofile"
        app:layout_constraintTop_toBottomOf="@+id/comment_line_userprofile"
        app:srcCompat="@color/PerfilBackGround" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comment_line_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Isto é o meu comentário"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/comment_line_background"
        app:layout_constraintEnd_toEndOf="@+id/comment_line_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/comment_line_background"
        app:layout_constraintTop_toTopOf="@+id/comment_line_background" />
</androidx.constraintlayout.widget.ConstraintLayout>